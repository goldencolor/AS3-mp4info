    <field name="track height" type="" length="4" comments="轨道高度" />
  </box>
  <!-- 媒体头信息 -->
  <box name="mdhd" comments="media header">
    <field name="version" type="" length="1" comments="版本" />
    <field name="flags" type="" length="3" comments="标志位" />
    <field name="creation time" type="" length="4" comments="创建时间" />
