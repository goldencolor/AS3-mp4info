    <field name="component name" type="" length="1" comments="组件名称" />
  </box>
  <!-- handler 引用 - 定义了描述此媒体数据的mediahandler component -->
  <box name="" comments="">
    <field name="version" type="" length="1" comments="版本" />
    <field name="flags" type="" length="3" comments="标志位" />
    <field name="number of entries" type="" length="1" comments="sample descriptions数目" />
