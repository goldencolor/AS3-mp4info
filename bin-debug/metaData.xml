    <field name="quality" type="" length="2" comments="质量" />
  </box>
  <!-- handler 引用 - 定义了描述此媒体数据的mediahandler component -->
  <box name="hdrl" comments="handler reference">
    <field name="version" type="" length="1" comments="版本" />
    <field name="flags" type="" length="3" comments="标志位" />
    <field name="component type" type="" length="4" comments="组件类型" />
